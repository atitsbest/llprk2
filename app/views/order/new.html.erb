<div class="container">
    <div class="col-xs-12">
        <h1>Kasse</h1>
    </div>
    <div class="col-sm-3 hidden-xs">
        Was ich kaufen werden...
        <h3 class="amount"><%= number_to_currency @cart.sub_total_price %></h3>
    </div>
    <div class="col-xs-12 col-sm-9">
        <%= form_for @order, url: order_new_path, html: { class: "form form-horizontal" } do |f| %>
            <% if @order.errors.any? %>
                <div id="error_explanation">
                    <h2>Bitte korrigieren Sie folgende Fehler:</h2>
                    <ul>
                        <% @order.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <div class="form-group">
                <%= f.label :salutation, "Anrede" %>
                <%= f.select(:salutation, Order::SALUTATIONS, prompt: 'Anrede wählen', :class => "form-control") %>
            </div>
            <div class="form-group">
                <%= f.label :firstname, "Vorname" %>
                <%= f.text_field :firstname, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :name, "Nachname" %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :company, "Adresszusatz/Firma" %>
                <%= f.text_field :company, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :street, "Strasse, Nr." %>
                <%= f.text_field :street, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :zip, "PLZ" %>
                <%= f.text_field :zip, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :city, "Ort" %>
                <%= f.text_field :city, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :country_id, "Land" %>
                <%= f.collection_select(:country_id, Country.all, :id, :name) %>
            </div>
            <div class="form-group">
                <%= f.label :email, "E-Mail" %>
                <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :pay_type, "Zahlungsart" %>
                <p>
                    <%= f.radio_button :pay_type, :wire %>
                    <span>Überweisung</span>
                </p>
                <p>
                    <%= f.radio_button :pay_type, :paypal %>
                    <%= link_to(image_tag("http://akunpaypal.files.wordpress.com/2012/02/paypal1.jpg", width:'100px'), order_express_path) %>
                </p>
            </div>
            <p>
                <%= f.submit 'Bestellung abschicken', class: "btn btn-primary" %>
            </p>
        <% end %>
    </div>
</div>
