<div id="products" class="row">
    <h3 class="category-header"><span>Taschen</span></h3>
    <div class="container">
        <div class="row">
            <% cache ['store', Product.last] do %>
                <% @products.each do |product| %>
                    <% cache ['product', product] do %>
                        <div class="product col-lg-3 col-md-3 col-sm-4 col-xs-12">
                            <a href="<%= store_products_path(id: product) %>">
                                <% if product.images.length > 0 %>
                                    <img class="product-image unveil" 
                                         data-src="<%= product.images.first.content.url(:gallery) %>" />
                                <% end %>
                                <h4 class="title"><%= product.title %><sup class="is-new">Neu</sup></h4>
                                <div class="descr" style="display:none;"><%= product.description %></div>
                                <h5 class="price"><%= number_to_currency(product.price) %></h5>
                            </a>
                        </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
