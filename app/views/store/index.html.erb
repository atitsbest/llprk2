<div id="products">
    <% cache ['store', Product.last] do %>
        <% @products.each do |product| %>
            <% cache ['product', product] do %>
                <div class="product">
                    <a href="<%= store_products_path(id: product) %>">
                        <% if product.product_images.length > 0 %>
                            <img src="<%= product.product_images.first.image.url(:gallery) %>" />
                        <% end %>
                        <h3><%= product.title %></h3>
                        <p><%= sanitize(product.description) %></p>
                        <span><%= number_to_currency(product.price) %></span>
                    </a>
                </div>
            <% end %>
        <% end %>
    <% end %>
</div>
