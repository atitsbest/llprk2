<div id="cart">
    <div class="container">
        <% if @cart.line_items.length == 0 %>
            <div class="row empty-cart">
                <div class="col-xs-12 text-center">
                    <h3>Dein Warenkorb ist noch leer.</h3>
                    <a href="<%= store_url %>">Hier geht's zum Shop</a>
                </div>
            </div>
        <% else %>
            <div class="col-xs-12">
                <ul class="list-unstyled line_items">
                    <li class="row header hidden-xs">
                        <div class="col-xs-7">
                            <h3>Warenkorb</h3>
                        </div>
                        <div class="col-xs-1 text-center">
                            Menge
                        </div>
                        <div class="col-xs-2 text-right">
                            Preis
                        </div>
                        <div class="col-xs-2 text-right">
                            Summe
                        </div>
                    </li>
                    <!-- ko foreach: lineItems -->
                    <li class="item row clearfix">
                        <div class="col-sm-2 col-xs-12 image">
                            <img data-bind="attr: {src:product.product_images[0].url}" />
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <span class="title">
                                <a data-bind="attr: { href: product.url }, text:product.title"></a>
                            </span>
                        </div>
                        <div class="col-sm-2 col-xs-2 text-center">
                            <select class="qty text-center form-control">
                                <option>1</option>
                            </select>
                            <%# <%= link_to 'entfernen', line_item, method: :delete, html: { class: 'text-muted' } %>
                        </div>
                        <div class="col-sm-2 col-xs-5 text-right">
                            <span class="price" data-bind="text:price"></span>
                        </div>
                        <div class="col-sm-2 col-xs-5 text-right">
                            <strong class="price" data-bind="text:price"></strong>
                        </div>
                    </li>
                    <!-- /ko -->
                    <li class="row sub_total">
                        <div class="col-xs-12 text-right">
                            <span>Zwischensumme von <%= @cart.line_items.length %> Artikel(n): </span>
                            <h3 class="amount" data-bind="text:subTotal"></h3>
                    </li>
                </ul>
            </div>

            <div class="col-xs-12 col-sm-4 col-sm-offset-8 col-lg-2 col-lg-offset-10">
                <a href="<%= order_new_path %>" class="btn btn-primary">Weiter...</a>
            </div>
        <% end %>
    </div>
</div>
